#Practica de alfabetos, cadenas y lenguajes
#Cuantas cadenas se ingresan? Opcion de crear las cadenas random

print ("Ingrese dos cadenas")
u = input("u = ")
v = input("v = ")

print("Â¿Que accion desea realizar?")
entrada = int(input("\n1.Concatenacion \n2.Potenciacion \n3.Averiguar longitud \n4.Invertit cadena\n \n5.Subcadenas \n6.Prefijos y sufijos"))

if entrada == 1:
   print(f'Concatenacion = {u + v}')
elif entrada == 2:
    z = input("Quiere potenciar la cadena 'u' o la cadena 'v'")
    n = int(input("n = "))
    if z == "u": print (u * n)
    else: print (v * n)
elif entrada == 3:
    z = input("Quiere conocer la longitud de la cadena 'u' o de la cadena 'v'")
    if z == "u": print(f'Longitud = {len(u)}')
    else: print(f'Longitud = {len(v)}')
elif entrada == 4:
    z = input("Quiere conocer la inversa de la cadena 'u'' o de 'v'")
    if z == "u": print(f'Inversa = {u[::-1]}')
    else: print(f'Inversa = {u[::-1]}')
else: print("Bye")
